{
    "name": "koa-service-sample",
    "version": "1.0.0",
    "description": "service sample using koa and typescript to serve as a base for future projects",
    "main": "app.ts",
    "scripts": {
        "start": "ts-node ./src/app.ts",
        "debug": "node --inspect -r ts-node/register ./src/app.ts",
        "clean": "rm -rf dist",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "lint": "tslint --project tsconfig.json --format stylish",
        "build": "tsc",
        "server": "node dist/app.js",
        "dev": "nodemon"
    },
    "jest": {
        "preset": "ts-jest",
        "transform": {
            "^.+\\.(t|j)sx?$": "ts-jest"
        },
        "collectCoverageFrom": [
            "<rootDir>/src/**/*{ts|tsx}"
        ],
        "testRegex": "/__tests__/.*\\.(ts|tsx)$"
    },
    "repository": {
        "type": "git",
        "url": "git+https://jdcwright@github.com/jdcwright/koa-service-sample.git"
    },
    "author": "jdcw",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jdcwright/koa-service-sample/issues"
    },
    "homepage": "https://github.com/jdcwright/koa-service-sample#readme",
    "dependencies": {
        "@hapi/joi": "^16.1.7",
        "@types/hapi__joi": "^16.0.3",
        "@types/lodash": "^4.14.149",
        "@types/node": "^12.12.12",
        "axios": "^0.19.0",
        "knex": "^0.20.2",
        "koa": "^2.11.0",
        "koa-bodyparser": "^4.2.1",
        "koa-router": "^7.4.0",
        "koa-unless": "^1.0.7",
        "lodash": "^4.17.21",
        "node-cache": "^5.0.2",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/koa": "^2.0.52",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa-router": "^7.0.42",
        "jest": "^24.9.0",
        "nodemon": "^2.0.0",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.2",
        "tslint": "^5.20.1",
        "tslint-config-airbnb": "^5.11.2",
        "typescript": "^3.7.2"
    }
}
